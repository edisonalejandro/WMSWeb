@model WMSWeb.Models.DocumentoEntrada


@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4"><i class="icono derecha fas fa-file-medical"></i> Ingreso Documento Entrada</h1>

<hr />
<div class="container">
    <form asp-action="Create">
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group mb-3">
                    <div class="input-group-text">
                        <input type="checkbox" aria-label="Checkbox for following text input">
                        <label class="position-relative" aria-label="label with checkbox"> Traspaso</label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CodAlmacen" class="control-label"></label>
                    <select asp-for="CodAlmacen" class="form-control" asp-items="ViewBag.CodAlmacen"></select>
                </div>
                <div class="form-group">
                    <label asp-for="NroDocEntrada" class="control-label"></label>
                    <input asp-for="NroDocEntrada" class="form-control" />
                    <span asp-validation-for="NroDocEntrada" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NroDocReferencia" class="control-label"></label>
                    <input asp-for="NroDocReferencia" class="form-control" />
                    <span asp-validation-for="NroDocReferencia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CodDocEntrada" class="control-label"></label>
                    <input asp-for="CodDocEntrada" class="form-control" />
                    <span asp-validation-for="CodDocEntrada" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CodAlmacenOrigen" class="control-label"></label>
                    <select asp-for="CodAlmacenOrigen" class="form-control" asp-items="ViewBag.CodAlmacen"></select>
                    <span asp-validation-for="CodAlmacenOrigen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CodProveedor" class="control-label"></label>
                    <select asp-for="CodProveedor" class="form-control" asp-items="ViewBag.CodProveedor"></select>
                    @* <input type="search" value="..." class="btn btn-outline-info" />*@
                </div>
                <div class="form-group">
                    <label asp-for="Observaciones" class="control-label"></label>
                    <input asp-for="Observaciones" class="form-control" />
                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FecEstimadaRecepcion" class="control-label"></label>
                    <input asp-for="FecEstimadaRecepcion" class="form-control" />
                    <span asp-validation-for="FecEstimadaRecepcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

                <div>
                    <a asp-action="Index">Ver Listado de Documentos</a>
                </div>
            </div>
        </div>
    </form>
</div>


