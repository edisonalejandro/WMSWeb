@model WMSWeb.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

    <h1 class="display-4"> <i class="icono izquierda fas fa-user"></i> Crear Usuario </h1>
<hr />
<div class="container">
    <form asp-action="Create">
        <div class="row ">
            <div class="col-md-6">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CodUsuario" class="control-label">Codigo Usuario:</label>
                    <input asp-for="CodUsuario" class="form-control" />
                    <span asp-validation-for="CodUsuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CodAlmacen" class="control-label">Codigo de Almacén:</label>
                    <select asp-for="CodAlmacen" class="form-control" asp-items="ViewBag.CodAlmacen"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Clave" class="control-label">Contraseña</label>
                    <input asp-for="Clave" class="form-control" />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NomUsuario" class="control-label">Nombre Usuario:</label>
                    <input asp-for="NomUsuario" class="form-control" />
                    <span asp-validation-for="NomUsuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rut" class="control-label">Rut:</label>
                    <input asp-for="Rut" class="form-control" />
                    <span asp-validation-for="Rut" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Estado" class="control-label">Estado:</label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CodZona" class="control-label">Codigo de Zona:</label>
                    <input asp-for="CodZona" class="form-control" />
                    <span asp-validation-for="CodZona" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AreaPicking" class="control-label">Area de Picking:</label>
                    <input asp-for="AreaPicking" class="form-control" />
                    <span asp-validation-for="AreaPicking" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dispositivo" class="control-label">Dispositivo:</label>
                    <input asp-for="Dispositivo" class="form-control" />
                    <span asp-validation-for="Dispositivo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
                <div class="form-group">
                    <a asp-action="Index">Ver Listado de Usuarios</a>
                </div>


            </div>
        </div>
    </form>
</div>
    

